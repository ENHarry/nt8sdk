<Window x:Class="NinjaTraderClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NinjaTraderClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="185" Width="300">
    <Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="5"/>
			<ColumnDefinition Width="40*"/>
			<ColumnDefinition Width="40*"/>
			<ColumnDefinition Width="5"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="10" />
			<RowDefinition Height="25*" />
			<RowDefinition Height="5" />
			<RowDefinition Height="25*" />
			<RowDefinition Height="55*" />
			<RowDefinition Height="10" />
		</Grid.RowDefinitions>

		<StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2">
			<Label Content="Instrument" VerticalAlignment="Center" />
			<TextBox Name="InstrumentInput" Width="100" VerticalAlignment="Center" />
		</StackPanel>

		<Button Content="Send" Grid.Column="1" Grid.Row="3" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Click="ToggleSend" />

		<StackPanel Grid.Column="1" Grid.Row="4" Orientation="Horizontal">
			<RadioButton Checked="SetSendType" Content="Live" Grid.Column="0" Grid.Row="3" GroupName="sendType" HorizontalAlignment="Left" Margin="0,0,10,0" VerticalAlignment="Top" IsChecked="True"/>
			<RadioButton Checked="SetSendType" Content="Historical" Grid.Column="1" Grid.Row="3" GroupName="sendType" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" />
		</StackPanel>

		<Button Content="Receive" Grid.Column="2" Grid.Row="3" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Click="ToggleReceive" />

		<Grid Grid.Column="2" Grid.Row="4">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="50*"/>
				<ColumnDefinition Width="50*"/>
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="33*" />
				<RowDefinition Height="33*" />
				<RowDefinition Height="33*" />
			</Grid.RowDefinitions>

			<Label Content="Last:" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Left" Margin="0" Padding="0" VerticalAlignment="Top" />
			<TextBlock x:Name="LastTextBlock" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Left" Height="18" Margin="0" Padding="0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="57" />
			<Label Content="Ask:" Grid.Column="0" Grid.Row="1" HorizontalAlignment="Left" Margin="0" Padding="0" VerticalAlignment="Top" />
			<TextBlock x:Name="AskTextBlock" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" Height="18" Margin="0" Padding="0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="57" />
			<Label Content="Bid:" Grid.Column="0" Grid.Row="2" HorizontalAlignment="Left" Margin="0" Padding="0" VerticalAlignment="Top" />
			<TextBlock x:Name="BidTextBlock" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Left" Height="18" Margin="0" Padding="0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="57" >
			</TextBlock>
		</Grid>
    </Grid>
</Window>
